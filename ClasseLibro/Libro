enum Genere {
    romanzo, manuale, thriller;
}

public class Libro {
    public String autore;
    public String titolo;
    public int pagine;
    final double PREZZOPAGINE = 0.05;
    Genere tipo;
    
    public String formattaDati() {

        return String.format("Autore: %s Titolo: %s Pagine: %s Prezzo: %f", autore, titolo, pagine, PREZZOPAGINE * (double) pagine);
        

    }

}
